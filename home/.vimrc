"Line number
set number
set relativenumber

"No highlight for search
set nohlsearch

"" --  Tabs & Indentation
set tabstop=4
set shiftwidth=4

" -- prevent to go all the way down leave at lease 8 line number visible
set scrolloff=8

" --  Search setting
set pumheight=10

" --  Appearance
set background="dark"
set signcolumn="yes"

" --  Backspace
set backspace="indent,eol,start"

" --  Clipboard
set clipboard:append("unnamedplus")

" --  Swap file
set noswapfile



